@model ConfirmMoneyViewModel

<div class="containe min-vh-100 abc">
    <div class="card">
        <h2 class="heading">Confirm Money Transfer</h2>

        <div class="details">
            <p class="label">Sender Name</p>
            <p class="value">@Model.senderName</p>

            <p class="label">Sender Account</p>
            <p class="value">@Model.SenderAccountNumber</p>

            <p class="label">Sender Bank</p>
            <p class="value">@Model.SenderBankName</p>

            <p class="label">Receiver Name</p>
            <p class="value">@Model.ReciverName</p>

            <p class="label">Receiver Account</p>
            <p class="value">@Model.ReceiverAccountNumber</p>

            <p class="label">Receiver Bank</p>
            <p class="value">@Model.ReceiverBankName</p>

            <p class="label">Amount</p>
            <p class="value">@Model.Amount</p>

            <p class="label">Description</p>
            <p class="value">@Model.Description</p>
        </div>

        <button class="btn-send" onclick="showPasswordModal()">Send Money</button>
    </div>
</div>

<!-- Transaction Password Modal -->
<div id="transactionPasswordModal" class="modal">
    <div class="modal-content">
        <h3>Enter Transaction Password</h3>
        <input type="password" id="transactionPassword" class="input-field" required />
        <button class="btn-confirm" onclick="submitTransfer()">Confirm</button>
        <button class="btn-cancel" onclick="closeModal()">Cancel</button>
    </div>
</div>

<!-- Hidden Form -->
<form id="transferForm" action="/Client/Account/FinalizeMoneyTransfer" method="post">
    <input type="hidden" name="SenderName" value="@Model.senderName" />
    <input type="hidden" name="SenderAccountNumber" value="@Model.SenderAccountNumber" />
    <input type="hidden" name="SenderBankName" value="@Model.SenderBankName" />
    <input type="hidden" name="ReciverName" value="@Model.ReciverName" />
    <input type="hidden" name="ReceiverAccountNumber" value="@Model.ReceiverAccountNumber" />
    <input type="hidden" name="ReceiverBankName" value="@Model.ReceiverBankName" />
    <input type="hidden" name="Amount" value="@Model.Amount" />
    <input type="hidden" name="Description" value="@Model.Description" />
    <input type="hidden" id="hiddenTransactionPassword" name="TransactionPassword" />
</form>

<!-- JavaScript for Modal -->
<script>
    function showPasswordModal() {
        document.getElementById("transactionPasswordModal").style.display = "flex";
    }

    function closeModal() {
        document.getElementById("transactionPasswordModal").style.display = "none";
    }

    function submitTransfer() {
        var password = document.getElementById("transactionPassword").value;
        if (!password) {
            alert("Please enter your transaction password.");
            return;
        }
        document.getElementById("hiddenTransactionPassword").value = password;
        document.getElementById("transferForm").submit();
    }
</script>

