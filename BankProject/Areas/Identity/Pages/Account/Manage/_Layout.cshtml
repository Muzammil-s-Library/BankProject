@{
 
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
 
}

<h1 class="sho text-success text-center green-header">Manage your account</h1>

<div>

    <hr />
    <div class="row">
        <div class="col-md-4 ">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-8">
            <div class="centered-form">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<style>
    .sho {
        margin-top: 150px;
    }

    /* Green header color */
    .green-header {
        color: #005555; /* Green color for header */
    }

    /* Center the forms */


    /* Style for the navigation section */
    .custom-nav {
        margin-top: 30px; /* Adjust as needed */
        padding-left: 0;
        padding-right: 0;
    }

        .custom-nav .nav-item {
            margin-bottom: 15px; /* Adjust spacing between items */
        }

        .custom-nav .nav-link {
            background-color: #005555; /* Light greenish background */
            border-radius: 8px; /* Rounded corners */
            padding: 10px 15px; /* Padding for better button feel */
            transition: all 0.3s ease-in-out;
        }

            .custom-nav .nav-link:hover {
                background-color: #005555; /* Green background on hover */
                color: white; /* Text color changes to white on hover */
            }

            .custom-nav .nav-link.active {
                background-color: #005555; /* Active link has green background */
                color: white; /* Active link text color */
                font-weight: bold;
            }

        .custom-nav .nav-item a {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Light shadow */
        }

        .custom-nav .nav-item:last-child {
            border-bottom: 2px solid #ddd; /* Light gray bottom border */
        }
</style>
