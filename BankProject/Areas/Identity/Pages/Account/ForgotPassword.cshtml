@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container mt-5 py-5 custom-margin">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
        <div class="card shadow-lg rounded-3 p-5" style="max-width: 500px; width: 100%;">
            <h3 class="text-center mb-4" style="color: darkorange;"><b>Forgot your password?</b></h3>
            <p class="text-center">Enter your email address, and we will send you a link to reset your password.</p>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" autocomplete="username" required />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-margin {
        margin-top: 0px !important;
    }

    .site-navbar {
        background-color: #343a40;
        color: black;
        border-bottom: 2px solid darkorange;
    }
</style>
