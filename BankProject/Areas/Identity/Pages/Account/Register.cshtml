@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5 py-5 custom-margin">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
        <div class="card shadow-lg rounded-3 p-5" style="max-width: 800px; width: 100%;">
            <h3 class="text-center mb-4" style="color: darkorange;"><b>Register</b></h3>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6">
                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="Input.FullName" class="form-label"></label>
                            <input asp-for="Input.FullName" class="form-control" placeholder="Enter your full name" required />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>

                        <!-- Email Address -->
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Enter your email address" required />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>


                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm your password" required />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>


                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="Input.Username" class="form-label"></label>
                            <input asp-for="Input.Username" class="form-control" placeholder="Choose a username" required />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>


                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Create a password" required />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                    </div>
                </div>

                <!-- Full Width Address Field -->


                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>
            <p class="text-center mt-3">
                Already have an account? <a asp-page="/Account/Login" class="text-decoration-none">Login</a>
            </p>
        </div>
    </div>
</div>

