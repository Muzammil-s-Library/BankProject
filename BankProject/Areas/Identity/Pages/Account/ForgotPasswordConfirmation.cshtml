@page
@model ForgotPasswordConfirmation

@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5 py-5 custom-margin">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 75vh;">
        <div class="card shadow-lg rounded-3 p-5 text-center" style="max-width: 600px; width: 100%;">
            <h3 class="mb-4" style="color: darkorange;"><b>@ViewData["Title"]</b></h3>
            <p class="mb-4">Please check your email to reset your password.</p>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    </div>
</div>

<style>
    .custom-margin {
        margin-top: 0px !important;
    }

    /* Ensure the navbar has a contrasting background color */
    .site-navbar {
        background-color: #343a40; /* Dark gray background */
        color: black; /* Black text for navbar */
        border-bottom: 2px solid darkorange; /* Highlighted border */
    }
</style>